<p id="notice"><%= notice %></p>

<h1>Listing Authorizations</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Change request</th>
      <th>Authorized</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authorizations.each do |authorization| %>
      <tr>
        <td><%= authorization.user_id %></td>
        <td><%= authorization.change_request_id %></td>
        <td><%= authorization.authorized %></td>
        <td><%= authorization.comment %></td>
        <td><%= link_to 'Show', authorization %></td>
        <td><%= link_to 'Edit', edit_authorization_path(authorization) %></td>
        <td><%= link_to 'Destroy', authorization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

