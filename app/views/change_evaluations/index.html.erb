<p id="notice"><%= notice %></p>

<h1>Listing Change Evaluations</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Rate</th>
      <th>Description</th>
      <th>Change request</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @change_evaluations.each do |change_evaluation| %>
      <tr>
        <td><%= change_evaluation.rate %></td>
        <td><%= change_evaluation.description %></td>
        <td><%= change_evaluation.change_request.name %></td>
        <td><%= change_evaluation.user.name %></td>
        <td><%= link_to 'Show', change_evaluation %></td>
        <td><%= link_to 'Edit', edit_change_evaluation_path(change_evaluation) %></td>
        <td><%= link_to 'Destroy', change_evaluation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

