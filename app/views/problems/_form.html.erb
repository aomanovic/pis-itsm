<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@problem) do |f| %>
        <% if @problem.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@problem.errors.count, "error") %> prohibited this problem from being saved:</h2>

              <ul>
                <% @problem.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>


        <%= f.label :Naziv %> <br>
        <%= f.text_field :naziv, class: 'form-control' %>

        <%= f.label :Opis %><br>
        <%= f.text_area :opis, class: 'form-control' %>

        <%= f.label :Kategorija %><br>
        <%= f.text_field :kategorija, class: 'form-control' %>

        <%= f.label :Prioritet %><br>
        <%= f.select :prioritet, options_for_select([ "Low", "Medium", "High", "Urgent" ], "Medium")%>

        <%= f.submit "Kreiraj", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>

